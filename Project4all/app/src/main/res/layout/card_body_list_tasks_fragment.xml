<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="8dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_id_card_tasks_fragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/text_label_card_tasks_fragments"
            android:text="--"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/text_label_card_tasks_fragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image_card_tasks_fragment"
            android:text="UsuÃ¡rio:"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/image_card_tasks_fragment"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            card_view:srcCompat="@mipmap/ic_launcher" />
    </RelativeLayout>
</android.support.v7.widget.CardView>